{
  "manifest_version": 3,
  "name": "ZipZip - Zip File Multitool",
  "version": "1.0.0",
  "description": "Fast & easy compression and decompression of zip files, entirely local with no tracking.",
  "author": "Jules ESNAULT",
  "homepage_url": "https://github.com/gravyt1/zipzip-extension",
  "action": {
    "default_popup": "popup.html",
    "default_title": "ZipZip - Zip File Multitool"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}